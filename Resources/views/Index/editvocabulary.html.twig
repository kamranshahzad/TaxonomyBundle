{% extends 'KamranTaxonomyBundle::layout.html.twig' %}


{% block body %}

<h1>Taxonomy edit</h1>

<form class="entity" action="{{ path('vocabulary_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_errors(edit_form) }}
    {{ form_rest(edit_form) }}
    <div class="actions">
        <button type="submit">Save</button>
    </div>
</form>

<form class="delete" action="{{ path('vocabulary_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit">Delete</button>
</form>

{% endblock %}