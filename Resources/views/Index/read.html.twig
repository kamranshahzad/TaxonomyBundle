{% extends 'LinkBundle::layout.html.twig' %}
{% block body %}

    <h2>New Link</h2>

    <form class="entity" action="{{ path('links_upload') }}" method="post" {{ form_enctype(form) }} >
        {{ form_errors(form) }}
        {{ form_rest(form) }}
        <div class="actions">
            <button type="submit">Create</button>
        </div>
    </form>

    <br/>
    <b> Total Links found:{{ links|length }}</b>
    <ul>
        {% for link in links %}
            <li>{{ link|e }}</li>
        {% endfor %}
    </ul>

{% endblock %}